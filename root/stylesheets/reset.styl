*, *:before, *:after
  box-sizing border-box

html
  font-size: 100%
  overflow-y: scroll
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  margin: 0
  font-size: 13px
  line-height: 1.231
  font-family: 'Helevtica Nueue', Helvetica, Arial, sans-serif
  font-smooth: always
  font-weight: 400
  font-size: 13px
  padding: 0 0 100px 0

body, button, input, select, textarea
  font-family: sans-serif
  color: #222

a
  color: #00e
  &:visited
    color: #551a8b
  &:hover
    color: #06e
  &:focus
    outline: thin dotted
